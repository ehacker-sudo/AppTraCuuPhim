<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_film"
    android:layout_marginStart="15dp"
    android:layout_marginBottom="15dp"
    android:minWidth="400dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_film_image"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:shapeAppearanceOverlay="@style/roundimageview"
        android:src="@drawable/backdrop_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/iv_film_image"
        android:orientation="vertical"
        android:background="@drawable/item_bg"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="15dp">

            <TextView
                android:id="@+id/tv_film_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="7dp"
                android:gravity="center"
                android:text="2021"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_marginEnd="7dp"
                android:src="@drawable/banner_circle" />

            <ImageView
                android:id="@+id/iv_film_type"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:layout_marginEnd="7dp"
                android:src="@drawable/banner_tv" />

            <TextView
                android:id="@+id/tv_film_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:gravity="center"
                android:text="Movie"
                android:textColor="@color/white"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_marginEnd="7dp"
                android:src="@drawable/banner_circle" />

            <TextView
                android:id="@+id/tv_film_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="18+"
                android:textColor="@color/white"
                android:textSize="13dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_film_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1998"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>