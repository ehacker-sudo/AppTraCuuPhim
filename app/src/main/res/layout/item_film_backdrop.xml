<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/item_film"
    android:background="@color/body_color"
    android:paddingStart="13dp"
    android:layout_marginBottom="10dp">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_film_image"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:shapeAppearanceOverlay="@style/rounditemimageview"
        android:src="@drawable/film_bg" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignBottom="@id/iv_film_image"
        android:layout_marginVertical="7dp"
        android:layout_marginHorizontal="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_film_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="2021"
                android:textColor="@color/app_color"
                android:layout_marginEnd="7dp"
                android:textSize="13dp" />

            <ImageView
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:src="@drawable/circle"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/iv_film_type"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/item_film"
                android:layout_marginEnd="7dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_film_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Movie"
                android:textColor="@color/app_color"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                android:textSize="13dp" />
            <ImageView
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:src="@drawable/banner_circle"
                android:layout_marginEnd="7dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_film_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="18+"
                android:textColor="@color/app_color"
                android:textSize="13dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_film_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start"
                android:text="1998"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>