<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:id="@+id/item_video"
    android:background="@color/body_color">
    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/video_image_view"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@id/video_image_view">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginVertical="7dp"
                android:layout_gravity="center"
                android:src="@drawable/play_outline"/>

            <TextView
                android:id="@+id/video_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:gravity="center"
                android:text="Trailer"
                android:textColor="#ffffff"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/video_runtime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="0.30"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/video_name"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="asasasasasasasasasasasasasasasa"/>
</LinearLayout>