<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_film_extra"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:layout_marginBottom="10dp"
    android:background="@color/body_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NgÃ y sinh"
            android:textSize="15dp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/tv_info_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1955-01-15"
            android:textSize="13dp"
            android:textColor="#808080"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <ImageView
            android:id="@+id/item_action"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_right_outline"/>
    </LinearLayout>
</RelativeLayout>